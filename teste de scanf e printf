#include <stdio.h>

int main(){
    int idade = 29;
    float altura = 1.90;
    float saldo = 1700.00;
    char inicial = 'M';
    char nome[20] = "MARCELO";

    printf("digite a sua idade: ");
    scanf("%d", &idade);

    printf("digite a sua altura: ");
    scanf("%f", &altura);

    printf("digite seu saldo: ");
    scanf(" %f", &saldo);
    
    printf("inicial do nome: ");
    scanf(" %c", &inicial);

    printf("tem: %d anos de idade\n", idade);
    printf("mede: %.2f de altura\n", altura);
    printf("saldo: %.2f reais\n", saldo);
    printf("inicial do nome: %c\n", inicial);
    





}
